<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id = "@+id/logout_illustration"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="50dp"
        android:src = "@drawable/sign_out_page_illustration"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView1"
        />


    <TextView
        android:id = "@+id/textView1"
        android:layout_marginTop="25dp"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_out_confimation"
        app:layout_constraintTop_toBottomOf= "@+id/logout_illustration"
        app:layout_constraintRight_toRightOf="@+id/logout_illustration"
        app:layout_constraintLeft_toLeftOf= "@+id/logout_illustration"
        android:fontFamily="@font/ritam_sans_bold"
        android:textAlignment="center"
        android:textColor="@color/gray"
        android:textSize="24sp"
        />

    <Button
        android:id = "@+id/btn_SignOut"
        android:layout_marginTop="30dp"
        android:layout_width="180dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf= "parent"
        app:layout_constraintBottom_toTopOf="@id/btn_Cancel"
        android:text="Sign Out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/custom_button1"
        />

    <Button
        android:id = "@+id/btn_Cancel"
        android:layout_marginTop="15dp"
        android:layout_width="150dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf= "@+id/btn_SignOut"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf= "parent"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:backgroundTint="@color/light_gray"
        android:background="@drawable/custom_button1"
        />



</androidx.constraintlayout.widget.ConstraintLayout>