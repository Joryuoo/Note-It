<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.HomePageFragment3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/titleHeader"
            android:text="Archive"
            android:textSize="22sp"
            android:fontFamily="@font/ritam_sans_bold"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <Button
            android:id="@+id/notesArchive"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:fontFamily="@font/ritam_sans_demibold"
            android:text="Notes"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            android:background="@drawable/custom_button1"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/titleHeader"
            app:layout_constraintStart_toStartOf="parent"/>

        <Button
            android:id="@+id/taskArchive"
            android:minWidth="80dp"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Tasks"
            android:textColor="@color/white"
            android:fontFamily="@font/ritam_sans_demibold"
            android:background="@drawable/custom_button1"
            android:backgroundTint="@color/gray"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textAllCaps="false"
            app:layout_constraintTop_toBottomOf="@id/titleHeader"
            app:layout_constraintStart_toEndOf="@id/notesArchive"
            />

        <FrameLayout
            android:id="@+id/flArchiveFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/taskArchive"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>
