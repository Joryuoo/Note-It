<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_shape3"
    android:backgroundTint="@color/light_gray1"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    android:paddingTop="5dp"
    android:minHeight="75dp"
    android:maxWidth="600dp"
    android:fitsSystemWindows="true"
    tools:context=".fragments.AddTaskBottomSheet">

    <EditText
        android:id="@+id/task"
        android:imeOptions="actionDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/what_would_you_like_to_do"
        android:inputType="text"
        android:textColorHint="@color/gray"
        android:fontFamily="@font/ritam_sans_demibold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
